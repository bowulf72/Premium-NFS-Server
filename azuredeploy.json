{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "NFSVMsku": {
      "type": "string",
      "defaultValue": "Standard_E64s_v3",
      "allowedValues": [
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2",
        
        "Standard_D8s_v3",
        "Standard_D16s_v3",
        "Standard_D32s_v3",
        "Standard_D64s_v3",

        "Standard_E8s_v3",
        "Standard_E16s_v3",
        "Standard_E32s_v3",
        "Standard_E64s_v3",

        "Standard_F8s_v2",
        "Standard_F16s_v2",
        "Standard_F32s_v2",
        "Standard_F64s_v2"
      ],
      "metadata": {
        "description": "sku to use for the NFS server VM"
      }
    },
    "NISVMsku": {
      "type": "string",
      "defaultValue": "Standard_F16",
      "allowedValues": [
        "Standard_F4",
        "Standard_F8",
        "Standard_F16"
      ],
      "metadata": {
        "description": "sku to use for the NIS Server VM"
      }
    },
    "SGEVMsku": {
      "type": "string",
      "defaultValue": "Standard_F16",
      "allowedValues": [
        "Standard_F4",
        "Standard_F8",
        "Standard_F16"
      ],
      "metadata": {
        "description": "sku to use for the SGE Server VM"
      }
    },
    "LICVMsku": {
      "type": "string",
      "defaultValue": "Standard_F16",
      "allowedValues": [
        "Standard_F4",
        "Standard_F8",
        "Standard_F16"
      ],
      "metadata": {
        "description": "sku to use for the License Server VM"
      }
    },
    "ServerImage": {
      "type": "string",
      "defaultValue": "CentOS_7.4",
      "allowedValues": [
        "CentOS_7.4",
        "RHEL_7.4"
      ],
      "metadata": {
        "description": "The VM image of the master nodes"
      }
    },
    "CompNodeVMsku": {
      "type": "string",
      "defaultValue": "Standard_H16m",
      "allowedValues": [
        "Standard_A8",
        "Standard_A9",
        "Standard_D2_v2",
        "Standard_D3_v2",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D11_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2",
        "Standard_D15_v2",
        "Standard_DS2_v2",
        "Standard_DS3_v2",
        "Standard_DS4_v2",
        "Standard_DS5_v2",
        "Standard_DS11_v2",
        "Standard_DS12_v2",
        "Standard_DS13_v2",
        "Standard_DS14_v2",
        "Standard_DS15_v2",
        "Standard_F4",
        "Standard_F8",
        "Standard_F16",
        "Standard_F4s",
        "Standard_F8s",
        "Standard_F16s",
        "Standard_H8",
        "Standard_H16",
        "Standard_H8m",
        "Standard_H16m",
        "Standard_H16r",
        "Standard_H16mr",
        "Standard_NC6",
        "Standard_NC12",
        "Standard_NC24",
        "Standard_NC24r"
      ],
      "metadata": {
        "description": "Instance type to use for the compute nodes"
      }
    },
    "computeNodeImage": {
      "type": "string",
      "defaultValue": "CentOS_7.3",
      "allowedValues": [
        "CentOS_7.3"
      ],
      "metadata": {
        "description": "The VM image of the compute nodes"
      }
    },
    "computeNodeCount": {
      "type": "int",
      "metadata": {
        "description": "Number of VM instances for Compute Node Scaleset (100 or less)."
      },
      "defaultValue": 64,
      "maxValue": 100
    },
    "adminUserName": {
      "type": "string",
      "metadata": {
        "description": "User name for the Virtual Machine."
      }
    },
    "authenticationType": {
      "type": "string",
      "defaultValue": "password",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Authentication type for the virtual machines"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Admin password for the virtual machines"
      }
    },
    "sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH public key that will be included on all nodes. The OpenSSH public key can be generated with tools like ssh-keygen on Linux or OS X."
      }
    },
    "dataDiskSize": {
      "type": "int",
      "defaultValue": 1024,
      "metadata": {
        "description": "The size in GB of each of the data disks that are attached to the VM.  A RAID-0 volume is created with all data disks that is dataDiskSize * dataDiskCount in size."
      }
    },
    "nbDataDisks": {
      "type": "int",
      "defaultValue": 16,
      "maxValue": 16,
      "metadata": {
        "description": "The number of disks to attach to the NFS server."
      }
    },
    "existingVNetName": {
      "type": "string",
      "defaultValue": "POC-Network",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    },
    "existingVNetResourceGroup": {
      "type": "string",
       "defaultValue": "POC-ResourceGroup",
      "metadata": {
        "description": "name of Resource Group for existing Virtual Network"
      }
    },
    "existingSubnetName": {
      "type": "string",
      "defaultValue": "POC-Subnet",
      "metadata": {
        "description": "name of existing Virtual Network"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "vnetID": "[resourceId(parameters('existingVNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('existingVNetName'))]",
    "SubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('existingSubnetName'))]",
    "DiagSAName": "[concat(uniqueString(subscription().id, resourceGroup().id), 'diag')]",
    "NFSName": "NFS01",
    "NISName": "NIS01",
    "SGEName": "sgemaster",
    "LICName": "LIC01",
    "ClusterPrefix": "cluster",
    "NFSIPConfigName": "[concat(variables('NFSName'), 'ipconfig')]",
    "NISIPConfigName": "[concat(variables('NISName'), 'ipconfig')]",
    "SGEIPConfigName": "[concat(variables('SGEName'), 'ipconfig')]",
    "LICIPConfigName": "[concat(variables('LICName'), 'ipconfig')]",
    "NodeipConfigName": "[concat(variables('ClusterPrefix'), 'ipconfig')]",
    "NFSNicName": "[concat(variables('NFSName'), 'nic')]",
    "NISNicName": "[concat(variables('NISName'), 'nic')]",
    "SGENicName": "[concat(variables('SGEName'), 'nic')]",
    "LICNicName": "[concat(variables('LICName'), 'nic')]",
    "NodenicName": "[concat(variables('ClusterPrefix'), 'nic')]",
    "ServerimageReference": "[variables('Images')[parameters('ServerImage')]]",
    "computeNodeimageReference": "[variables('Images')[parameters('computeNodeImage')]]",
    "sshKeyPath": "[concat('/home/',parameters('adminUserName'),'/.ssh/authorized_keys')]",
    "Images": {
      "CentOS_7.3": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.3",
        "version": "latest"
      },
      "CentOS_7.4": {
        "publisher": "OpenLogic",
        "offer": "CentOS",
        "sku": "7.4",
        "version": "latest"
      },
      "RHEL_7.4": {
        "publisher": "RedHat",
        "offer": "RHEL",
        "sku": "7.4",
        "version": "latest"
      }
    },
    "linuxConfiguration_sshPublicKey": {
      "disablePasswordAuthentication": "true",
      "ssh": {
        "publicKeys": [
          {
            "path": "[variables('sshKeyPath')]",
            "keyData": "[parameters('sshPublicKey')]"
          }
        ]
      }
    },
    "linuxConfiguration_password": { },
    "linuxConfiguration": "[variables(concat('linuxConfiguration_',parameters('authenticationType')))]",
    
    "storageAccountType": "Standard_LRS",
    
    "NFSScripts": {
      "scriptsToDownload": [
        "https://raw.githubusercontent.com/grandparoach/Premium-NFS-Server/special/setup.sh"
      ],
      "commandToExecute": "[concat('bash setup.sh ', parameters('adminUserName'))]"
    },
    "clientScripts": {
      "scriptsToDownload": [
        "https://raw.githubusercontent.com/grandparoach/Premium-NFS-Server/special/client-setup.sh"
      ],
      "commandToExecute": "[concat('bash client-setup.sh ', variables('NFSName'))]"
    }
  },  
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('DiagSAName')]",
      "location": "[variables('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('NFSNicName')]",
      "location": "[variables('location')]",
      "apiVersion": "2018-04-01",
      "dependsOn": [ ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('NFSIPConfigName')]",
            "properties":  {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ],
        "enableAcceleratedNetworking": true
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('NFSName')]",
      "location": "[variables('location')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/', variables('NFSNicName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('NFSVMsku')]"
        },
        "osProfile": {
          "computerName": "[variables('NFSName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('ServerimageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Premium_LRS"
             }
          },

          "copy": [{
            "name": "dataDisks",
            "count": "[parameters('nbDataDisks')]",
            "input": {
                "lun": "[copyIndex('dataDisks')]",
                "createOption": "Empty",
                "caching": "ReadOnly",
                "diskSizeGB": "[parameters('datadiskSize')]"
            }
        }]

         
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('NFSNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },     
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('NFSName'), '/ext')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('NFSName'))]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('NFSScripts').scriptsToDownload]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('NFSScripts').commandToExecute]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('NISNicName')]",
      "location": "[variables('location')]",
      "apiVersion": "2018-04-01",
      "dependsOn": [ ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('NISIPConfigName')]",
            "properties":  {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('NISName')]",
      "location": "[variables('location')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/', variables('NISNicName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('NISVMsku')]"
        },
        "osProfile": {
          "computerName": "[variables('NISName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('ServerimageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Standard_LRS"
             }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('NISNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },     
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('NISName'), '/ext')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('NISName'))]",
        "[concat('Microsoft.Compute/virtualMachines/', variables('NFSName'),'/extensions/ext')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('clientScripts').scriptsToDownload]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('clientScripts').commandToExecute]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('SGENicName')]",
      "location": "[variables('location')]",
      "apiVersion": "2018-04-01",
      "dependsOn": [ ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('SGEIPConfigName')]",
            "properties":  {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('SGEName')]",
      "location": "[variables('location')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/', variables('SGENicName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SGEVMsku')]"
        },
        "osProfile": {
          "computerName": "[variables('SGEName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('ServerimageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Standard_LRS"
             }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('SGENicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },     
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('SGEName'), '/ext')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('SGEName'))]",
        "[concat('Microsoft.Compute/virtualMachines/', variables('NFSName'),'/extensions/ext')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('clientScripts').scriptsToDownload]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('clientScripts').commandToExecute]"
        }
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('LICNicName')]",
      "location": "[variables('location')]",
      "apiVersion": "2018-04-01",
      "dependsOn": [ ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('LICIPConfigName')]",
            "properties":  {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              }
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('LICName')]",
      "location": "[variables('location')]",
      "apiVersion": "2017-03-30",
      "dependsOn": [
        "[concat('Microsoft.Network/networkinterfaces/', variables('LICNicName'))]",
        "[concat('Microsoft.Storage/storageAccounts/', variables('DiagSAName'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('LICVMsku')]"
        },
        "osProfile": {
          "computerName": "[variables('LICName')]",
          "adminUsername": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]",
          "linuxConfiguration": "[variables('linuxConfiguration')]"
        },
        "storageProfile": {
          "imageReference": "[variables('ServerimageReference')]",
          "osDisk": {
            "caching": "ReadOnly",
            "createOption": "FromImage",
             "managedDisk": {
                "storageAccountType": "Standard_LRS"
             }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
               "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('LICNicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
           "storageUri": "[concat('http://',variables('DiagSAName'),'.blob.core.windows.net')]"
          }
        }
      }
    },     
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('LICName'), '/ext')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', variables('LICName'))]",
        "[concat('Microsoft.Compute/virtualMachines/', variables('NFSName'),'/extensions/ext')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[variables('clientScripts').scriptsToDownload]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('clientScripts').commandToExecute]"
        }
      }
    },
    {
        "type": "Microsoft.Compute/virtualMachineScaleSets",
        "name": "[variables('ClusterPrefix')]",
        "location": "[variables('location')]",
        "apiVersion": "2017-12-01",
        "sku": {
          "name": "[parameters('CompNodeVMsku')]",
          "tier": "Standard",
          "capacity": "[parameters('computeNodeCount')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Compute/virtualMachines/', variables('NFSName'),'/extensions/ext')]"
        ],
        "properties": {
          "overprovision": "false",
          "upgradePolicy": {
            "mode": "Manual"
          },
          "virtualMachineProfile": {
            "networkProfile": {
              "networkInterfaceConfigurations": [
                {
                  "name": "[variables('NodenicName')]",
                  "properties": {
                    "primary": "true",
                    "ipConfigurations": [
                      {
                        "name": "[variables('NodeipConfigName')]",
                        "properties": {
                          "subnet": {
                              "id": "[variables('SubnetRef')]"
                          }
                        }
                      }
                    ]
                  }
                }
              ]
            },
            "osProfile": {
              "computerNamePrefix": "[variables('clusterPrefix')]",
              "adminUsername": "[parameters('adminUserName')]",
              "adminPassword": "[parameters('adminPassword')]",
              "linuxConfiguration": "[variables('linuxConfiguration')]"
            },
            "storageProfile": {
              "imageReference": "[variables('computeNodeimageReference')]",  
              "osDisk": {
                "caching": "ReadOnly",
                "createOption": "FromImage",
                "managedDisk": {
                  "storageAccountType": "Standard_LRS"
              }
            }
          },
          "extensionProfile": {
            "extensions": [
              {
                "name": "installCN",
                "properties": {
                  "publisher": "Microsoft.Azure.Extensions",
                  "type": "CustomScript",
                  "typeHandlerVersion": "2.0",
                  "autoUpgradeMinorVersion": true,
                  "settings": {
                    "fileUris": "[variables('clientScripts').scriptsToDownload]",
                    "commandToExecute": "[variables('clientScripts').commandToExecute]"
                  }
                }
              }
            ]
          }
        }
      }
    }
  ]
}
